function storeBusiness() {
    const business = {
        name: document.getElementById('businessName').value,
        description: document.getElementById('description').value,
        address: document.getElementById('address').value,
        items: [],
        hours: {}
    };


    document.querySelectorAll('#itemsContainer div').forEach(div => {
        const itemName = div.children[0].value;
        const itemPrice = div.children[1].value;
        if (itemName && itemPrice) {
            business.items.push({ name: itemName, price: parseFloat(itemPrice) });
        }
    });


    const days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
    const timeInputs = document.querySelectorAll('.times-grid input');
    days.forEach((day, index) => {
        business.hours[day] = {
            open: timeInputs[index * 2].value,
            close: timeInputs[index * 2 + 1].value
        };
    });


    const key = `business_${Date.now()}`;
    localStorage.setItem(key, JSON.stringify(business));

    alert('Business registered successfully!');
    document.getElementById('businessForm').reset();
    document.getElementById('itemsContainer').innerHTML = `
        <div><input type="text" placeholder="Item Name"> <input type="number" placeholder="Price"></div>`;
}
